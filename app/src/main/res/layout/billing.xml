<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:gravity="top">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/name"
            style="@style/TextInputLayoutStyle"
            android:id="@+id/name"
            android:background="#00FFFFFF"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/trader_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="Trader name"
                android:inputType="textFilter"
                android:padding="15dp"
                android:focusableInTouchMode="true"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#000"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/name"
            style="@style/TextInputLayoutStyle"

            android:background="#00FFFFFF"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="Product name"
                android:inputType="textFilter"
                android:padding="15dp"
                android:focusableInTouchMode="true"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#000"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mail"
            style="@style/TextInputLayoutStyle"
            android:id="@+id/from"
            android:background="#00FFFFFF"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/item_from"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="Items from "
                android:inputType="textFilter"
                android:padding="15dp"
                android:focusableInTouchMode="true"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#000"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mail"
            style="@style/TextInputLayoutStyle"
            android:id="@+id/prce"
            android:background="#00FFFFFF"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/pt_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="Product price"
                android:inputType="textFilter"
                android:padding="15dp"
                android:focusableInTouchMode="true"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#000"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mail"
            style="@style/TextInputLayoutStyle"
            android:background="#00FFFFFF"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/pt_quantity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="Product quantity"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:focusableInTouchMode="true"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#000"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mail"
            style="@style/TextInputLayoutStyle"
            android:background="#00FFFFFF"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/pt_damage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="Product damage"
                android:inputType="textFilter"
                android:padding="15dp"
                android:focusableInTouchMode="true"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#000"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mail"
            style="@style/TextInputLayoutStyle"
            android:background="#00FFFFFF"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/pt_commision"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="Product commission"
                android:inputType="textFilter"
                android:padding="15dp"
                android:focusableInTouchMode="true"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#000"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mail"
            style="@style/TextInputLayoutStyle"
            android:background="#00FFFFFF"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/pt_rent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="Product rent"
                android:inputType="textFilter"
                android:padding="15dp"
                android:focusableInTouchMode="true"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#000"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mail"
            style="@style/TextInputLayoutStyle"

            android:background="#00FFFFFF"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/pt_debit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="Product debit"
                android:inputType="textFilter"
                android:padding="15dp"
                android:focusableInTouchMode="true"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#000"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mail"
            style="@style/TextInputLayoutStyle"
            android:background="#00FFFFFF"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/pt_total"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="Product Total"
                android:inputType="textFilter"
                android:padding="15dp"
                android:focusableInTouchMode="true"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#000"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    </ScrollView>