<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="top"
    android:layout_gravity="top"
    android:layout_height="match_parent"
    tools:context=".buyer_fragment">
    <com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/TextInputLayoutStyle"
    android:id="@+id/name"
    android:layout_marginTop="100dp"
    android:background="#00FFFFFF"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    >
    <EditText
        android:id="@+id/pt_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:inputType="textFilter"
        android:padding="15dp"
        android:focusableInTouchMode="true"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000"/>
</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextInputLayoutStyle"
        android:id="@+id/category"
        android:layout_below="@+id/name"
        android:background="#00FFFFFF"
        android:layout_margin="10dp"
        >
        <EditText
            android:id="@+id/pt_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:hint="Category"
            android:inputType="textFilter"
            android:padding="15dp"
            android:focusableInTouchMode="true"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#000"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextInputLayoutStyle"
        android:id="@+id/boxes"
        android:layout_below="@+id/category"
        android:background="#00FFFFFF"
        android:layout_margin="10dp"
        >
        <EditText
            android:id="@+id/pt_boxes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:hint="Number of boxes needed"
            android:inputType="number"
            android:padding="15dp"
            android:focusableInTouchMode="true"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#000"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextInputLayoutStyle"
        android:id="@+id/location"
        android:layout_below="@+id/boxes"
        android:background="#00FFFFFF"
        android:layout_margin="10dp"
        >
        <EditText
            android:id="@+id/pt_location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:hint="Location"
            android:inputType="textFilter"
            android:padding="15dp"
            android:focusableInTouchMode="true"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#000"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/post_req"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Post buy request"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:gravity="top"/>
</LinearLayout>